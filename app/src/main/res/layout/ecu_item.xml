<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ecuIDText"
        android:text="ECU ID: "
        android:textSize="24sp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ecuIDValueText"
        android:text="8"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ecuIDText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MILText"
        android:text="Luz MIL: "
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/MILValueText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MILValueText"
        android:text="Apagada"
        android:textSize="24sp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/monitorsText"
        app:layout_constraintTop_toBottomOf="@id/ecuIDText"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Monitores:"
        android:textSize="24sp"
        android:layout_marginLeft="25dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/monitorsValueText"
        app:layout_constraintTop_toBottomOf="@id/monitorsText"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Valores"
        android:textSize="21sp"
        android:layout_marginLeft="35dp"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ecuIDText"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/monitorsLV"
        android:layout_margin="5dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>